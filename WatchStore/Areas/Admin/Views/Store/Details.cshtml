@model WatchStore.Models.Stores

@{
    ViewBag.Title = "Details Store";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@Html.Partial("_MessageAlert")
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-9">
        <h2>Store</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="~/admin">Dashboard</a>
            </li>
            <li class="breadcrumb-item">
                <a>Store</a>
            </li>
            <li class="breadcrumb-item active">
                <strong>Detail</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-3">
        <br />
        <a class="btn btn-success" href="@Url.Action("Index", "Store")">
            <i class="fa fa-mail-reply"></i>&nbsp;&nbsp;<span class="bold">Quay về</span>
        </a>
        <a class="btn btn-danger" href="@Url.Action("Trash", "Store")">
            <i class="fa fa-trash"></i>&nbsp;&nbsp;<span class="bold">Thùng rác</span>
        </a>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    <h5 style="color:red;">@Model.Address</h5>
                </div>
                <div class="ibox-content">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group">
                        <label>Địa chỉ</label>
                        <p>@Model.Address</p>
                    </div>

                    <div class="form-group">
                        <label>Kinh độ</label>
                        <p>@Model.Longitude</p>
                    </div>

                    <div class="form-group">
                        <label>Vĩ độ</label>
                        <p>@Model.Latitude</p>
                    </div>

                    <div class="form-group">
                        <label>Giờ mở cửa</label>
                        @Html.TextAreaFor(model => model.OpenHours, new { @class = "form-control", rows = 5 })
                        @Html.ValidationMessageFor(model => model.OpenHours, "", new { @class = "text-danger" })
                    </div>

                    @*<div class="form-group">
                        <label>Giờ mở cửa hiển thị:</label>
                        <div>
                            @Html.Raw(Model.OpenHours.Replace("\n", "<br />"))
                        </div>
                    </div>*@


                    <div class="form-group">
                        <label>Menu URL</label>
                        <p>@Model.MenuUrl</p>
                    </div>

                    <div class="form-group">
                        <label>Ngày tạo</label>
                        <p>@String.Format("{0:dd/MM/yyyy - hh:mm:ss}", Model.Created_at)</p>
                    </div>

                    <div class="form-group">
                        <label>Ngày cập nhật</label>
                        <p>@String.Format("{0:dd/MM/yyyy - hh:mm:ss}", Model.Updated_at)</p>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
