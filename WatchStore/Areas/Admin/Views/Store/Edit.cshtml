@model WatchStore.Models.Stores

@{
    ViewBag.Title = "Edit Store";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@Html.Partial("_MessageAlert")
@using (Html.BeginForm("Edit", "Store", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-9">
            <h2>Store</h2>
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="~/admin">Dashboard</a>
                </li>
                <li class="breadcrumb-item">
                    <a>Store</a>
                </li>
                <li class="breadcrumb-item active">
                    <strong>Edit</strong>
                </li>
            </ol>
        </div>
        <div class="col-lg-3">
            <br />
            <button class="btn btn-success" type="submit"><i class="fa fa-save"></i>&nbsp;&nbsp;<span class="bold">Chấp nhận</span></button>
            <a class="btn btn-primary" href="@Url.Action("Index", "Store")"><i class="fa fa-undo"></i>&nbsp;&nbsp;<span class="bold">Trở về</span></a>
        </div>
    </div>

    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox">
                    <div class="ibox-title">
                        <p><i class="text-danger"><strong>* </strong>Các mục đánh dấu (*) là bắt buộc</i></p>
                    </div>
                    <div class="ibox-content">
                        <form method="get">
                            <div class="row">
                                <div class="col-md-9">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    @Html.HiddenFor(model => model.Id)
                                    @Html.HiddenFor(model => model.Created_at)
                                    @Html.HiddenFor(model => model.Created_by)

                                    @*<div class="form-group">
            <label>Tên cửa hàng </label><label style="color:red;">(*)</label>
            @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
        </div>*@

                                    <div class="form-group">
                                        <label>Địa chỉ</label><label style="color:red;">(*)</label>
                                        @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="form-group">
                                        <label>Kinh độ</label>
                                        @Html.EditorFor(model => model.Longitude, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Longitude, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="form-group">
                                        <label>Vĩ độ</label>
                                        @Html.EditorFor(model => model.Latitude, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Latitude, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="form-group">
                                        <label>Giờ mở cửa</label>
                                        @Html.TextAreaFor(model => model.OpenHours, new { @class = "form-control", rows = 5 }) <!-- Bạn có thể điều chỉnh số hàng tùy ý -->
                                        @Html.ValidationMessageFor(model => model.OpenHours, "", new { @class = "text-danger" })
                                    </div>


                                    <div class="form-group">
                                        <label>Menu URL</label>
                                        @Html.EditorFor(model => model.MenuUrl, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.MenuUrl, "", new { @class = "text-danger" })
                                    </div><div class="form-group">
                                        <label>DeliveryUrl</label>
                                        @Html.EditorFor(model => model.DeliveryUrl, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.DeliveryUrl, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div style="display: none" class="col-md-3">
                                    <div style="display: none" class="form-group">
                                        <select class="form-control"  style="display: none" name="Status">
                                            <option value="1">Hiện</option>
                                            <option value="2">Ẩn</option>
                                        </select>
                                        @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                                    </div>

                                    
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
